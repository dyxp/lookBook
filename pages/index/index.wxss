/**index.wxss**/

page {
  background-color: #282828;
  color: #9da3b4;
}
.index-head{
  width: 650rpx;
  margin: 40rpx auto 0;
  display: flex;
  justify-content: space-between;
}

.index-head-img{
 width: 34rpx;
  height: 34rpx;
}

.head {
  width: 750rpx;
  height: 100rpx;
  position: relative;
  background-color: #282828;
  margin-top: 40rpx;
}

.head-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 60rpx;
  top: 30rpx;
}

.wrappers {
  width: 650rpx;
  margin: 0 auto;
  padding-bottom: 60rpx;
  padding-top: 60rpx;
  border-bottom: 1rpx solid #2f343c;
}

.head-input {
  padding-left: 80rpx;
  border-radius: 20px;
  width: 600rpx;
  height: 100rpx;
  color: #9da3b4;
  margin: 0 auto;
  background-color: #2d353d;
}

.head-input-placeholder {
  font-size: 30rpx;
  color: #9da3b4;
}

.wrapper {
  /* padding-bottom: 60rpx; */
  padding-top: 60rpx;
}

.wrapper-title {
  width: 650rpx;
  margin: 0 auto 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.title-rank {
  color: #fff;
  font-size: 32rpx;
}

.wrapper-tx {
  white-space: nowrap;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #2f343c;
}

.touxiang {
  margin-right: 30rpx;
  display: inline-block;
  padding-bottom:40rpx; 
}

.touxiang-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.touxiang-word {
  color: #fff;
  font-size: 28rpx;
}

.new-book {
  padding-top: 60rpx;
  border-bottom: 1rpx solid #2f343c;
}

.new-books-out {
  width: 650rpx;
  margin: 0 auto;
}

.new-books {
  font-size: 0;
  width: 690rpx;
}

.books {
  display: inline-block;
  margin-right: 40rpx;
}

.books-image {
  width: 190rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.books-word {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.books-writer {
  font-size: 26rpx;
  margin-bottom: 90rpx;
}

.hot-search {
  width: 650rpx;
  margin: 0 auto;
  padding-top: 70rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #2f343c;
}

.hot-search-title {
  color: #fff;
  margin-bottom: 50rpx;
  font-size: 36rpx;
}

.hot-search-little {
  display: inline-block;
  padding: 15rpx 30rpx;
  border: 2rpx solid #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 26rpx;
}

.book-list {
  background-color: #2b323b;
  margin: 80rpx 30rpx 80rpx 0;
  display: inline-block;
  border-radius: 40rpx;
}

.book-list-left {
  float: left;
  margin: 0 30rpx;
}

.book-list-right {
  float: left;
  width: 350rpx;
  position: relative;
}

.book-list-img {
  width: 170rpx;
  height: 260rpx;
  position: relative;
  bottom: 50rpx;
}

.book-list-name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 8rpx;
}

.book-list-author {
  padding-bottom: 10rpx;
  color: #5d637c;
}

.book-list-introduce {
  width: 300rpx;
  padding-top: 8rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  border-top: 2rpx solid #353c46;
}

.ellipsi {
  position: absolute;
  right: 40rpx;
  top: 0;
}
