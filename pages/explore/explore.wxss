page {
  background-color: #21272e;
}

.head {
  width: 650rpx;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}


.head-word {
  color: #fff;
  font-size: 32rpx;
}

.head-img {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
}

.head-img1 {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.explore {
  width: 580rpx;
  margin: 0 auto ;
  padding-top: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.scide2 {
  margin-bottom: 76rpx;
}

.scide2-pic {
  width: 274rpx;
  height: 405rpx;
  margin-bottom: 23rpx;
}

.scide2-title {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
