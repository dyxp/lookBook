/* pages/shop/shop.wxss */

/* pages/class/class.wxss */

page {
  background-color: #282828;
  color: #9da3b4;
}

.head {
  width: 650rpx;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}

.head-word {
  color: #fff;
  font-size: 32rpx;
}

.book-list {
  width: 650rpx;
  background-color: #2b323b;
  margin: 80rpx auto;
  border-radius: 40rpx;
}

.clearfix::after {
  display: table;
  clear: both;
  content: "";
  height: 0;
  line-height: 0;
}

.book-list-left {
  float: left;
  margin: 0 30rpx -30rpx;
}

.book-list-right {
  float: left;
  width: 390rpx;
  position: relative;
}

.book-list-img {
  width: 170rpx;
  height: 260rpx;
  position: relative;
  bottom: 50rpx;
}

.book-list-name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 8rpx;
}

.book-list-author {
  padding-bottom: 10rpx;
  color: #5d637c;
}

.book-list-introduce {
  width: 360rpx;
  padding-top: 10rpx;
  font-size: 44rpx;
  color: #ff1d8d;
  border-top: 2rpx solid #353c46;
}

.ellipsi {
  position: absolute;
  right: 40rpx;
  top: 0;
}

.charge {
  width: 750rpx;
  height: 140rpx;
  line-height: 140rpx;
  /* position: fixed;
  bottom: 40rpx;
  left: 0; */
  text-align: center;
  background-color: #fb6894;
  display: flow-root;
}

.bottom {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  color: #fff;
  background: #282828;
}

.bottom-top {
  width: 650rpx;
  margin: 0 auto;
  display: flex;
  line-height: 100rpx;
  height: 100rpx;
  justify-content: space-between;
  /* padding: 0 20rpx; */
}

.money {
  color: #ff1d8d;
}
