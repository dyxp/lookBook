/* pages/authorAll/authorAll.wxss */

page {
  background-color: #282828;
  color: #9da3b4;
}

.wrapper {
  padding-top: 60rpx;
  /* padding-bottom: 60rpx; */
}

.wrapper-title {
  width: 650rpx;
  margin: 0 auto 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.title-rank {
  color: #fff;
  font-size: 36rpx;
}

.touxiang {
  margin-right: 30rpx;
  display: inline-block;
}

.touxiang-image {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 20rpx;
}

.touxiang-word {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.wrapper-tx {
  white-space: nowrap;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #2f343c;
}

.seekFocus {
  width: 130rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  border: 2rpx solid #545d66;
}

.alreadyFocus {
  width: 130rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: #478ce0;
  margin-top: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-radius: 10rpx;
}
