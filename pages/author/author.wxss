/* pages/author/author.wxss */

page {
  background-color: #21272e;
  color: #fff;
}

.person {
  width: 650rpx;
  margin: 0 auto;
  display: flex;
}

.person-left {
  margin-right: 30rpx;
}

.person-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}

.share {
  width: 180rpx;
  height: 60rxp;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid #545d66;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.share-color {
  background-color: #478ce0;
  color: #fff;
}

.share-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  position: relative;
  top: 2rpx;
}

.share-out {
  display: flex;
}

.person-name {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  font-size: 36rpx;
}

.person-area {
  padding-bottom: 60rpx;
  color: #b5b7c5;
}

.share-word {
  color: #9da3b4;
}

.book {
  margin-left: 50rpx;
  padding-bottom: 80rpx;
  padding-top: 80rpx;
  border-bottom: 2rpx solid #323643;
}

.book-list {
  height: 330rpx;
  border-radius: 40rpx;
}

.clearfix::after {
  display: table;
  clear: both;
  content: "";
  height: 0;
  line-height: 0;
}

.book-list-left {
  float: left;
  margin-right: 30rpx;
}

.book-list-right {
  float: left;
  width: 400rpx;
}

.book-list-img {
  width: 220rpx;
  height: 330rpx;
}

.book-list-name {
  color: #fff;
  font-size: 38rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.book-list-author {
  padding-bottom: 20rpx;
  color: #5d637c;
}

.book-list-introduce {
  width: 380rpx;
  /* padding-top: 20rpx; */
  font-size: 26rpx;
  overflow: hidden;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-list-grade {
  padding-top: 20rpx;
}

.star {
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}

.grade {
  color: #ffce44;
  margin-left: 30rpx;
  font-size: 36rpx;
}

.options {
  width: 650rpx;
  margin: 50rpx auto 30rpx;
  display: flex;
  background-color: #2b323b;
  justify-content: space-around;
  border-radius: 20rpx;
  /* margin-top: 50rpx;
  margin-bottom: 30rpx; */
}

.option {
  text-align: center;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  width: 205rpx;
}

.option-actice {
  border-right: 2rpx solid #363c45;
}

.focus{
  font-size: 26rpx;
  color: #9da3b4;
}
