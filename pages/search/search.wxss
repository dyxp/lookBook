/* pages/search/search.wxss */

page {
  background-color: #282828;
  color: #9da3b4;
}
.search-head {
  display: flex;
  width: 650rpx;
  margin: 0 auto;
}

.head {
  /* width: 450rpx; */
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  margin-top: 40rpx;
}

.head-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.head-input {
  padding-left: 80rpx;
  border-radius: 20px;
  width: 450rpx;
  height: 100rpx;
  color: #9da3b4;
  margin: 0 auto;
  background-color: #2d353d;
}

.head-input-placeholder {
  font-size: 30rpx;
  color: #9da3b4;
}
.cancel{
  margin-top: 40rpx;
  line-height: 100rpx;
  margin-left: 40rpx;
}



.new-book {
  padding-top: 60rpx;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #2f343c;
}

.wrapper-title {
  width: 650rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.title-rank {
  color: #fff;
  font-size: 32rpx;
}
.new-books-out {
  width: 650rpx;
  margin-top: 50rpx;
}

.new-books {
  font-size: 0;
  width: 690rpx;
}

.books {
  display: inline-block;
  margin-right: 40rpx;
}

.books-image {
  width: 190rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.books-word {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.books-writer {
  font-size: 26rpx;
  margin-bottom: 90rpx;
}

.heads {
  width: 650rpx;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}

.head-words {
  color: #fff;
  font-size: 32rpx;
}

.head-imgs {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}