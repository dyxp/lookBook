/* pages/class/class.wxss */
page {
  background-color: #282828;
  color: #9da3b4;
}
.head {
  width: 650rpx;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}

.head-word {
  color: #fff;
  font-size: 32rpx;
}

.head-img {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.book-list {
  width: 650rpx;
  background-color: #2b323b;
  margin: 80rpx auto;
  /* display: inline-block; */
  border-radius: 40rpx;
}
.clearfix::after{
  display: table;
  clear: both;
  content: "";
  height: 0;
  line-height: 0;

}

.book-list-left {
  float: left;
  margin: 0 30rpx;
}

.book-list-right {
  float: left;
  width: 390rpx;
  position: relative;
}

.book-list-img {
  width: 170rpx;
  height: 260rpx;
  position: relative;
  bottom: 50rpx;
}

.book-list-name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 8rpx;
}

.book-list-author {
  padding-bottom: 10rpx;
  color: #5d637c;
}

.book-list-introduce {
  width: 360rpx;
  padding-top: 10rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  border-top: 2rpx solid #353c46;
}

.ellipsi {
  position: absolute;
  right: 40rpx;
  top: 0;
}
